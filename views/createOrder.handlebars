 <div class="container">
    <div class="row">
      <div class="form">
          <h3>Pick 3 toppings from the following Meats, Vegetables or Cheeses!</h3>
          <p class="text-center">If no toppings are selected your default order will be a plain cheese pizza.</p>
          <div class="toppings">
            <div class="btn-group meats btnRow" role="group"></div><br>
            <div class="btn-group veggies btnRow" role="group"></div><br>
            <div class="btn-group cheeses btnRow" role="group"></div>
          </div>
          <div class="card pizzaCard" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title">Your Pizza</h5>
              <p class="card-text topOne">No Topping</p>
              <p class="card-text topTwo">No Topping</p>
              <p class="card-text topThree">No Topping</p>
              <p class="card-link add-pizza">Claw this pie!</p>
            </div>
          </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="checkOutModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Checkout</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="pizza">
            <h6 class="pizza-name"></h6>
            <ul>
              <li class="one"></li>
              <li class="two"></li>
              <li class="three"></li>
            </ul>
          </div>
          <div>
            <p class="total-amount">Your total is $10.80</p>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-link submitOrder">Submit Order</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script type="text/javascript" src="js/createOrder.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>