<div class="container">
    <h1 class="text-center">Welcome! <span class="member-name"></span></h1>
    <br />
    <div class="row">
      <div class="col-md-6 col-md-offset-3 form">
        <h2>Previous Orders</h2>
        {{#each orders}}
        <div class="card pizzaCard cardFloat" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{{pizzaName}}}</h5>
                <p class="card-text topOne">{{{toppingOne}}}</p>
                <p class="card-text topTwo">{{{toppingTwo}}}</p>
                <p class="card-text topThree">{{{toppingThree}}}</p>
                <p class="card-link add-pizza">Claw this pie!</p>
            </div>
        </div>
    {{/each}}
        <br />
      </div>
      <div class="col-md-6 col-md-offset-3 form">
        <h2>Make a New Order</h2>
        <br />
        <button type="button" class="btn btn-link" id="order-here">New Order</button>
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script type="text/javascript" src="js/members.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
