<div class="container">
    <h1 class="text-center">Welcome! <span class="member-name"></span></h1>
    <br />
    <div class="row">
      <div class="col-md-6 col-md-offset-3 form prevOrder">
        <h2>Previous Orders</h2>
        {{#each orders}}
        <div class="card pizzaCard" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{{pizzaName}}}</h5>
                <p class="card-text topOne">{{{toppingOne}}}</p>
                <p class="card-text topTwo">{{{toppingTwo}}}</p>
                <p class="card-text topThree">{{{toppingThree}}}</p>
                <p class="card-link add-pizza">Claw this pie again!</p>
            </div>
        </div>
    {{/each}}
        <br />
      </div>
      <div class="col-md-6 col-md-offset-3 form prevOrder">
        <h2>Make a New Order</h2>
        <br />
        <button type="button" class="btn btn-link" id="order-here">New Order</button>
      </div>
    </div>
  </div>
    <div class="modal fade" id="checkOutModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Checkout</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="pizza">
              <h6 class="pizza-name"></h6>
              <ul>
                <li class="one"></li>
                <li class="two"></li>
                <li class="three"></li>
              </ul>
            </div>
            <div>
              <p class="total-amount">Your total is $10.80</p>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-link submitOrder">Submit Order</button>
          </div>
        </div>
      </div>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script type="text/javascript" src="js/members.js"></script>
